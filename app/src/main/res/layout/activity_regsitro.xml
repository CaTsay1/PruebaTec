<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ActivitysLogin.RegsitroActivity">

    <ImageView
        android:id="@+id/Foto_de_Portada"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/fondo_5"
        android:scaleType="fitXY"
        android:alpha="0.8"
        app:layout_collapseMode="parallax"
        android:transitionName="@string/transitionname_picture" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="Registro"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Nombre_Registro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/snape_white_txt"
            android:hint="Nombre"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:textColorHint="@color/black"
            android:textColor="@color/black"/>








        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Correo_Registro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/snape_white_txt"
            android:hint="Correo"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:textColorHint="@color/black"
            android:textColor="@color/black"/>




        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Contrase単a_Registro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/snape_white_txt"
            android:hint="Contrase単a"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:textColorHint="@color/black"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Confirmar_Contrase単a_Registro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/snape_white_txt"
            android:hint="Confirmar Contrase単a"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:textColorHint="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="100dp"
            android:id="@+id/btn_Registrar"
            android:layout_width="match_parent"
            android:text="REGISTRAR"
            android:enabled="false"
            android:background="@drawable/selector_btn_entrar"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>